<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<display-name>统一开发支撑平台</display-name>

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 强制将所有请求字符集转换为 UTF-8 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 

	<!-- 监听器 -->
	
	<!--log4j配置文件加载 -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/config/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>1800000</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/config/context/root-context.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>
	
	
	<!-- Processes activiti-rest requests -->
 	<servlet>
	    <servlet-name>ActivitiRestServlet</servlet-name>
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/config/servlet/activiti-rest.xml</param-value>
	    </init-param>
	    <load-on-startup>4</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ActivitiRestServlet</servlet-name>
	    <url-pattern>/workflow/rest/*</url-pattern>
	</servlet-mapping>
	
	<!-- Processes activiti-modeler requests -->
 	<servlet>
	    <servlet-name>ActivitiModelServlet</servlet-name>
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/config/servlet/activiti-modeler.xml</param-value>
	    </init-param>
	    <load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ActivitiModelServlet</servlet-name>
	    <url-pattern>/workflow/service/*</url-pattern>
	</servlet-mapping>
	
	<!-- Processes activiti-kayura requests -->
<!--  	<servlet>
	    <servlet-name>ActivitiKayuraServlet</servlet-name>
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	    <init-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>/config/servlet/activiti-kayura.xml</param-value>
	    </init-param>
	    <load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ActivitiKayuraServlet</servlet-name>
	    <url-pattern>/workflow/*</url-pattern>
	</servlet-mapping> -->
	
	<!-- Processes kayura-rest requests -->
	<servlet>
		<servlet-name>KayuraRestServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/config/servlet/kayura-rest.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>KayuraRestServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<!-- Processes kayura-web requests -->
	<servlet>
		<servlet-name>KayuraWebServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/config/servlet/kayura-web.xml</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>KayuraWebServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<error-page>
    	<error-code>404</error-code>
    	<location>/error/404</location>
	</error-page>
  
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
			<include-prelude>/config/taglib.jspf</include-prelude>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>
	</jsp-config>

</web-app>